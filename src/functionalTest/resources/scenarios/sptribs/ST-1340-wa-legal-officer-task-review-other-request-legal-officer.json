{
  "description": "WA - Legal Officer Task - Review List Case - Legal Officer",
  "enabled": true,
  "jurisdiction": "st_cic",
  "caseType": "CriminalInjuriesCompensation",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": {
      "key": "caseworker"
    },
    "ccd": [
      {
        "eventId": "caseworker-create-case",
        "caseData": {
          "template": "st_cic_minimal_case_data.json",
          "replacements": {
          }
        }
      }
    ]
  },
  "updateCase": {
    "credentials": {
      "key": "caseworker"
    },
    "ccd": [
      {
        "eventId": "caseworker-case-built",
        "caseData": {
          "template": "st_cic_minimal_case_data.json"
        }
      }
    ]
  },
  "tests": [
    {
      "request": {
        "credentials": {
          "key": "caseworker"
        },
        "input": {
          "eventMessages": [
            {
              "destination": "RestEndpoint",
              "template": "st_cic_minimal-ccd-event-message.json",
              "replacements": {
                "EventId": "refer-to-legal-officer",
                "NewStateId": "AwaitingHearing",
                "AdditionalData": {
                  "Data": {
                    "cicCaseReferralTypeForWA": "Listed case"
                  }
                }
              }
            }
          ]
        }
      },
      "expectations": [
        {
          "credentials": {
            "key": "caseworker"
          },
          "status": 200,
          "numberOfTasksAvailable": 1,
          "taskData": {
            "template": "st_cic_minimal_task-response.json",
            "replacements": {
              "tasks": [
                {
                  "test_meta_data":
                    [
                      {
                        "key": "role_data_reference",
                        "value": "reviewListCaseLO"
                      }
                    ],
                  "type": "reviewListCaseLO",
                  "name": "Review List Case - Legal Officer",
                  "role_category": "LEGAL_OPERATIONS",
                  "description": "[Orders: Create draft](/cases/case-details/${[CASE_REFERENCE]}/trigger/create-draft-order/create-draft-ordercreateDraftOrder",
                  "minor_priority": 500,
                  "major_priority": 5000
                }
              ]
            }
          },
          "roleData": [
            {
              "key": "reviewListCaseLO",
              "numberOfRolesAvailable": 2,
              "roles": [
                {
                  "role_category": "LEGAL_OPERATIONS",
                  "role_name": "senior-legal-caseworker",
                  "permissions": [ "Read", "Own", "Claim", "Manage", "Assign", "Unassign", "Complete", "Cancel" ],
                  "authorisations": []
                },
                {
                  "role_category": "LEGAL_OPERATIONS",
                  "role_name": "tribunal-caseworker",
                  "permissions": [ "Read", "Own", "Claim", "Manage", "Assign", "Unassign", "Complete", "Cancel" ],
                  "authorisations": []
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
