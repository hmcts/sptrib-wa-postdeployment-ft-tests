{
  "description": "WA - Legal Officer Task 'Review withdrawal request",
  "enabled": true,
  "jurisdiction": "st_cic",
  "caseType": "CriminalInjuriesCompensation",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": {
      "key": "caseworker"
    },
    "ccd": [
      {
        "eventId": "caseworker-create-case",
        "caseData": {
          "template": "st_cic_minimal_case_data.json",
          "replacements": {
          }
        }
      }
    ]
  },
  "updateCase": {
    "credentials": {
      "key": "caseworker"
    },
    "ccd": [
      {
        "eventId": "caseworker-case-built",
        "caseData": {
          "template": "st_cic_minimal_case_data.json"
        }
      }
    ]
  },
  "tests": [
    {
      "request": {
        "credentials": {
          "key": "caseworker"
        },
        "input": {
          "eventMessages": [
            {
              "destination": "RestEndpoint",
              "template": "st_cic_minimal-ccd-event-message.json",
              "replacements": {
                "EventId": "refer-to-legal-officer",
                "NewStateId": "CaseManagement",
                "AdditionalData": {
                  "Data": {
                    "cicCaseReferralTypeForWA": "Rule 27 request"
                  }
                }
              }
            }
          ]
        }
      },
      "expectations": [
        {
          "credentials": {
            "key": "caseworker"
          },
          "status": 200,
          "numberOfTasksAvailable": 1,
          "taskData": {
            "template": "st_cic_minimal_task-response.json",
            "replacements": {
              "tasks": [
                {
                  "type": "reviewRule27RequestLO",
                  "name": "Review Rule 27 request - Legal Officer",
                  "role_category": "LEGAL_OPERATIONS",
                  "minor_priority": 500,
                  "major_priority": 5000
                }
              ]
            }
          },
          "roleData": {
            "roles": [
              {
                "role_category": "LEGAL_OPERATIONS",
                "role_name": "senior-legal-caseworker",
                "permissions": [ "Read,Own,Claim,Manage,Assign,Unassign,Complete,Cancel" ],
                "authorisations": []
              },
              {
                "role_category": "LEGAL_OPERATIONS",
                "role_name": "tribunal-caseworker",
                "permissions": [ "Read,Own,Claim,Manage,Assign,Unassign,Complete,Cancel" ],
                "authorisations": []
              }
            ]
          }
        }
      ]
    }
  ]
}
